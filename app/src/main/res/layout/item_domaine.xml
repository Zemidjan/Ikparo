<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:padding="@dimen/margin_half"
    android:layout_margin="@dimen/margin_quart"
    android:clickable="true"
    android:background="@drawable/selector_rounded_white_color">

    <RelativeLayout
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:id="@+id/domaine"

        >
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/book"/>


        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/block_libelle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/gris_5"
            android:alpha="0.7">

            <TextView
                android:id="@+id/libelle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developpement web "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="@dimen/margin_half"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>