<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bj.zemidjan.dio.activities.AffichageCoursActivity"
    tools:showIn="@layout/activity_affichage_cours">

    <LinearLayout
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_default"
        android:id="@+id/block_details">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="@dimen/margin_half">
            <ImageView
                android:id="@+id/certification"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/iconecertification"
                android:tint="@color/white"
                android:background="@color/colorPrimary"
                android:padding="@dimen/margin_half"/>
            <ImageView
                android:id="@+id/telechargeable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_file_download_black_24dp"
                android:tint="@color/white"
                android:background="@color/red"
                android:clickable="true"
                android:padding="@dimen/margin_half"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:text="Gratuit"
            android:id="@+id/gratuit"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@color/green"
            android:paddingTop="@dimen/margin_half"
            android:paddingBottom="@dimen/margin_half"
            android:paddingLeft="@dimen/margin_default"
            android:paddingRight="@dimen/margin_default"

            android:layout_margin="@dimen/margin_half"
            android:clickable="true" />
    </LinearLayout>
        <TextView
            android:id="@+id/titre_cours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:text="TITRE Gratuit Gratuit Gratuit Gratuit Gratuit Gratuit Gratuit Gratuit"
            android:layout_marginRight="@dimen/margin_half"
            android:layout_marginLeft="@dimen/margin_half"/>



        <TextView

            android:id="@+id/description_cours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:text="@string/large_text" />

    <Button
        android:id="@+id/btn_suivre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector_btn_accent_primary"
        android:textStyle="bold"
        android:text="Commencer le cours"
        android:textColor="@color/white"
        android:clickable="true"
        android:layout_marginBottom="50dp"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
